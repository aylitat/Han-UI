.jiangqie-app-info {
    padding: 100rpx 40rpx;
    text-align: center;
    padding-top: 150rpx;
}

.jiangqie-app-info image {
    height: 200rpx;
    width: 200rpx;
    border-radius: 200rpx;
}

.jiangqie-app-name {
    font-size: 32rpx;
    color: #FFF;
    font-weight: 500;
    line-height: 80rpx;
}

.jiangqie-app-slogan {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.3);
    font-weight: 400;
    line-height: 40rpx;
}

.jiangqie-login-btn {
    padding: 30rpx 160rpx;
}


.jiangqie-login-btnl,
.jiangqie-login-btnr {
    height: 80rpx;
    font-size: 30rpx;
    color: #555;
    font-weight: 400;
    border-radius: 16rpx;
    border: 2rpx solid #DDD;
    margin-top: 30rpx;
}

.jiangqie-login-btnl {
    color: #999;
    background: #FFF;
}
.jiangqie-login-btnr{
    background: linear-gradient(90deg, #0096ff,#007bff);
    color:#fff;
}