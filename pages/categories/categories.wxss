page{
    background: #f7f8fa;
}
.tui-searchbox {
    width: 100%;
    height: 92rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
}

.tui-searchbox::after {
    content: '';
    position: absolute;
    border-bottom: 1rpx solid #d2d2d2;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    bottom: 0;
    right: 0;
    left: 0;
}

.tui-search-input {
    width: 100%;
    height: 60rpx;
    background: #f1f1f1;
    border-radius: 30rpx;
    font-size: 26rpx;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tui-search-text {
    padding-left: 16rpx;
}


.right-box {
    padding: 0rpx 14rpx 0 14rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-sizing: border-box;
    display: flex;
    flex-wrap:wrap;
    justify-content:space-between;
    position: relative;
    top: 140rpx;
}

.page-view {
    width: 100%;
    overflow: hidden;
}

.sortbox {
    background: #fff;
    width: 340rpx;
    height: 380rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    /* padding: 20rpx 20rpx 20rpx 180rpx; */
    overflow: hidden;
    /* border-bottom: 1rpx solid #DDD; */
    margin: 12rpx 10rpx;
    background-color: rgba(0, 0, 0, 0.4);
    position: relative;
}

.sortimage {
    height: 380rpx;
    width: 340rpx;
    float: left;
    border-radius: 12rpx;
    /* margin-left: -160rpx; */
}

.sorttitle {
    overflow: hidden;
    padding: 0rpx 0rpx 22rpx 20rpx;
    font-weight: 700;
    color: #333;
    position: absolute;
    color: #fff;
    font-size: 28rpx;
    top: 270rpx;
}
.sortline{
    width: 306rpx;
    height: 2rpx;
    background-color: rgba(255, 255, 255, 0.8);
    position: absolute;
    top: 320rpx;
    margin: 0rpx 0rpx 26rpx 20rpx;
}

.sortsummary {
    overflow: hidden;
    margin: 0rpx 0rpx 0rpx 20rpx;
    font-size: 20rpx;
    font-weight: 200;
    color: #fff;
    position: absolute;
    top: 330rpx;
    width: 300rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.categorie-header {
    height: 126rpx;
    width: 100%;
    position: fixed;
    background: #1385FF;
    margin-bottom: 30rpx;
    z-index: 99;
}

.categorie-header image {
    height: 280rpx;
    width: 100%;
    position: absolute;
    z-index: 1;
}

.categorie-text {
    position: absolute;
    width: 80%;
    left: 30rpx;
    bottom: 20rpx;
    color: #333;
    z-index: 99;
    padding: 20rpx 40rpx;
    /* background: #fff; */
    border-radius: 20rpx;
}

.categorie-text text {
    font-size: 36rpx;
    color: #fff;
    /* font-weight: 500; */
    display: block;
    line-height: 40rpx;
}

.categorie-text view {
    font-size: 26rpx;
    color: #fff;
    font-weight: 200;
    line-height: 40rpx;
}
.sortround{
    background-color: rgba(255, 255, 255, 0.8);
    position: absolute;
    top: 340rpx;
    /* margin: 0rpx 0rpx 26rpx 20rpx; */
    width: 12rpx;
    height: 12rpx;
    right: 20rpx;
    border-radius: 12rpx;
}
.sortround-1{
    right: 42rpx;

}